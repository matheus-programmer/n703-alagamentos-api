# Configurações do Servidor
PORT=3000

# Chave da API do OpenWeather
# Obtenha em: https://openweathermap.org/api
OPENWEATHER_API_KEY="SUA_CHAVE_AQUI"

# Coordenadas de Fortaleza
FORTALEZA_LAT="-3.7327"
FORTALEZA_LON="-38.5267"

# Token de Autenticação para a API (crie um token seguro)
API_TOKEN="seu-token-secreto-para-autenticacao"

# Configuração do Banco de Dados MongoDB
# Exemplo para MongoDB rodando localmente: MONGO_URI="mongodb://localhost:27017/alagamentosDB"
MONGO_URI="SUA_CONNECTION_STRING_AQUI"

# Configuração do Serviço de E-mail (SMTP)
# Exemplo para Gmail (pode ser necessário criar uma 'App Password')
# Ou use um serviço como Mailtrap para testes: https://mailtrap.io/
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="seu-email@example.com"
SMTP_PASS="sua-senha"
SMTP_FROM="Alerta Alagamento <seu-email@example.com>"

# E-mail de destino para os alertas (pode ser uma lista separada por vírgula)
ALERT_RECIPIENT_EMAIL="destinatario1@example.com,destinatario2@example.com"
