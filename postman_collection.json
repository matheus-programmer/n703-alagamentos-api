			"response": []
		},
		{
			"name": "Enviar Alerta de Alagamento",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{API_TOKEN}}",
							"type": "string"
						}
