					"mode": "raw",
					"raw": "{\n    \"subject\": \"ALERTA: Risco Iminente de Alagamento\",\n    \"message\": \"Fortes chuvas detectadas. Evite áreas de risco e siga as recomendações da defesa civil.\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{BASE_URL}}/api/alerta",
					"host": [
						"{{BASE_URL}}"
					],
					"path": [
						"api",
						"alerta"
					]
				},
				"description": "Dispara o envio de um e-mail de alerta para os moradores cadastrados no sistema."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "BASE_URL",
			"value": "http://localhost:3000"
		},
		{
